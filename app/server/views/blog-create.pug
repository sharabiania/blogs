extends layout

block content
	input.form-control(id='title', placeholder='Blog Title')
	br
	textarea.form-control(id='desc', placeholder='Write your blog here, html permitted.')
	br
	div(style='text-align:right')
		a.btn.btn-light(href='/blog') Cancel
		| 
		button.btn.btn-primary(onclick='postblog()') Post
					
block scripts
	script.
		function postblog()
		{
			var data = {'title' : $('#title').val(), 'desc' : $('#desc').val() }; 
			$.ajax
		    ({
		        type: "POST",
		        //the url where you want to sent the userName and password to
				url: '/api/blog/',
				contentType: 'application/json',
		        dataType: 'json',
		        data: JSON.stringify(data),
		        success: function () {
		       		document.location.href = '/blog';
		        }
		    })
		}