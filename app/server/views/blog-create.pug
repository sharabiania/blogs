extends layout

block content
	input.form-control(id='title', placeholder='Blog Title')
	br
	textarea.form-control(id='desc', placeholder='Write your blog here, html permitted.')
	br
	div(style='text-align:right')
		a.btn.btn-light(href='/blog') Cancel
		| 
		button.btn.btn-primary(onclick='postblog()') Post
					
block scripts
	script(src='/js/views/blog-create.js')