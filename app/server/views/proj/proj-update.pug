extends ../shared/layout

block content
	.card
		.card-body
			form(action=proj._id, method='POST', enctype="multipart/form-data" onsubmit='postProj()')
				input.form-control(value=proj.title name='title', id='title', placeholder='Project name', required='required')
				br
				textarea.form-control(name='desc', id='desc', rows='10', placeholder='Description of your project, html permitted.', required='required') #{proj.desc}
				br
				input.form-control(name='image', id='image', type='file', placeholder='Upload image', accept="image/*")
				br
				input.form-control(name='order', id='order', type='number' value=proj.order)
				br
				div(style='text-align:right')
					a.btn.btn-light(href='/project') Cancel
					| 
					a.btn.btn-dark(href='#') Preview
					| 
					button.btn.btn-primary(id='btn' type='submit') Post
block scripts
	script.
		function postProj() {
			var btn = document.getElementById('btn');
			btn.disabled = true;
			btn.innerText = 'Posting...';
		}