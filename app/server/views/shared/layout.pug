		script.
			function toReadableDate(d){
					if(!d) return '';
					var ms = ["Jan", "Feb", "Mar", "Apr", "Jun", "Jul", 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
					var rd = new Date(d);
					return ms[rd.getMonth()] + ' ' + rd.getDay() + ', ' + rd.getFullYear();
				}
